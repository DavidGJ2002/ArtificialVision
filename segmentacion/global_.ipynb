    "import numpy as np\n",
    "\n",
    "def global_thresholding(image, threshold=None):\n",
    "    if threshold is None:\n",
    "        threshold = np.mean(image)\n",
    "    binary_image = np.where(image < threshold, 0, 255)\n",
    "    return binary_image"
   ]
